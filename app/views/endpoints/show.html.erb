<div class="grid grid-cols-2 gap-4 justify-center">
  <div class="border p-3 col-span-2 text-center">
    <h1><%= @endpoint.path %></h1>
  </div>
  <div class="border">
    Response Keys:
  </div>
  <div class="border">
    <ul>
      <% if @response.is_a? Hash %>
        <% @response.keys.map do |key| %>
          <li>
            <%= key %>
          </li>
        <% end %>
        <% else  %>
        no keys
      <% end %>
    </ul>
  </div>
</div>
<div class="p-5">
  hello
  <%= @response.keys %>
</div>
