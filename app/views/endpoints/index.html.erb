<div class="grid grid-cols-2 column-2 border">
  <h1 class="font-bold text-4xl col-span-2">Endpoints#index</h1>
  <div>
    <h1 class="border">Base url: "https://api-web.nhle.com/v1/"</h1>
    <div class="border">
      <%= form_with url: endpoints_path, method: :post do |f| %>
        <%= f.label :path  %>
        <%= f.text_field :path %>
        <%= f.submit %>
      <% end %>
    </div>
  </div>
  <ul>
    <% @endpoints.map do |endpoint| %>
      <li><%= link_to endpoint.path, endpoint_path(endpoint), class: 'underline text-blue-600' %></li>
    <% end %>
  </ul>
</div>
